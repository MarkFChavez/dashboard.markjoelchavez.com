!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title DazzboarD
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    #wrapper
      / Navigation
      %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "DazzboarD Admin", root_path, class: "navbar-brand"
        / Top Menu Items
        %ul.nav.navbar-right.top-nav
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-user
              = current_user.email
              %b.caret
            %ul.dropdown-menu
              %li
                %a{:href => "#"}
                  %i.fa.fa-fw.fa-gear
                  Settings
              %li.divider
              %li
                = link_to destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?" } do
                  %i.fa.fa-fw.fa-power-off
                  Log Out
        / Sidebar Menu Items - These collapse to the responsive navigation menu on small screens
        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav.side-nav
            %li{ class: active_link_to_class(root_path, active: :exact) }
              = link_to root_path do
                %i.fa.fa-fw.fa-dashboard
                Overview
            
            %li{ class: active_link_to_class(calendar_path, active: :exact) }
              = link_to calendar_path do
                %i.fa.fa-fw.fa-calendar
                Calendar

      = yield
      
